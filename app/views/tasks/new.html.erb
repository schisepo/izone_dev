<% provide(:title, 'Create Task') %>
<section id="portfolio" class="bg-light-gray organisation">
  <div class="container">
    <div class="row">
            <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Create New Task</h2>
            </div>
        </div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@task] do |f| %>
      <%= render 'shared/task_error_messages' %>
      <%= f.hidden_field :organisation_id %>
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>

     <%= collection_select(:task, :user_id, User.where(organisation_id:@task.user.organisation_id), :id, :name_display, prompt: true) %>
    <%= f.submit "Create Task", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
</section>
