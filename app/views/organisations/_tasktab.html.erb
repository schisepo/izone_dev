<div class="tab-pane active" id="panel-659209">
                <p>
              <% if @organisation.tasks.any? %>
                <table class="table table-hover table-condensed">
                    <thead>
                      <tr>
                        <th>
                          Date Created
                        </th>
                        <th>
                          Task
                        </th>
                        <th>
                          Status
                        </th>
                        <th>
                          Assigned To
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @tasks.each do |task| %>
                                <%= render task %>
                      <% end %>                  
                    </tbody>
                  </table>
                <% end %>
                <%= link_to "Add Task", new_organisation_task_path(@organisation),class:"page-scroll btn btn-xl"%>
                </p>
</div>