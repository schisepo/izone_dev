<% provide(:title, 'Create Organisation') %>
<section id="portfolio" class="bg-light-gray organisation">
  <div class="container">
    <div class="row">
            <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Register your Organisation</h2>
                 <!--    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3> -->
            </div>
        </div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
     <%= form_for (@organisation) do |f| %>
      <%= render 'shared/org_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :bpn %>
      <%= f.text_field :bpn, class: 'form-control' %>
      <%= f.label :logo %>
      <%= f.file_field :logo, class: 'form-control' %>
      <%= f.submit "Create my organisation", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
</section>


