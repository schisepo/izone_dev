<% provide(:title, "Edit user") %>
<section id="portfolio" class="bg-light-gray organisation">
  <div class="container">
    <div class="row">
            <div class="col-lg-12 text-center">
                    <h2 class="section-heading"><%=@user.name%></h2>
                 <!--    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3> -->
            </div>
        </div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, multipart:true) do |f| %>
      <%= render 'shared/error_messages' %>
<div class="panel-group" id="panel-569698">
        <div class="panel panel-default">
          <div class="panel-heading">
             <a class="panel-title" data-toggle="collapse" data-parent="#panel-569698" href="#panel-element-454757">Modify Personal Details</a>
          </div>
          <div id="panel-element-454757" class="panel-collapse collapse in">
            <div class="panel-body">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

     
      <%= f.hidden_field :email, class: 'form-control' %>

      <%= f.label :jobtitle %>
      <%= f.text_field :jobtitle, class: 'form-control' %>
            
      <%= f.label :bio %>
      <%= f.text_area :bio, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
             <a class="panel-title" data-toggle="collapse" data-parent="#panel-569698" href="#panel-element-454758">Social</a>
          </div>
          <div id="panel-element-454758" class="panel-collapse collapse in">
            <div class="panel-body">
      <%= f.label :facebook %>
      <%= f.text_field :facebook, class: 'form-control' %>

      <%= f.label :twitter %>
      <%= f.text_field :twitter, class: 'form-control' %>

      <%= f.label :linkedin %>
      <%= f.text_field :linkedin, class: 'form-control' %>
            
            </div>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
             <a class="panel-title" data-toggle="collapse" data-parent="#panel-569698" href="#panel-element-25813">Change Password</a>
          </div>
          <div id="panel-element-25813" class="panel-collapse collapse">
            <div class="panel-body">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
</div>
      </div>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>
</div>
</section>