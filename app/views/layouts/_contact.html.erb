<section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contact Us</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                <%= form_tag({controller: "static_pages", action: "sendcontact"}, method: "post", id: "contactForm") do %>
                  <!--   <form name="sentMessage" id="contactForm" novalidate action="sendcontact" method ="post"> -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                <%= text_field_tag(:name,nil,:class=>"form-control",:placeholder=>"Your Name *",:required=> true) %>
                                    <!-- <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">
 -->                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                        <%= text_field_tag(:email,nil,:type=>"Email",:class=>"form-control",:placeholder=>"Your Email *",:required=> true) %>

                                    <!-- <input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">
                                     --><p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                <%= text_field_tag(:phone,nil,:type=>"text",:class=>"form-control",:placeholder=>"Your Phone *",:required=> true) %>
                                    <!-- <input type="tel" class="form-control" placeholder="Your Phone *" id="phone" required data-validation-required-message="Please enter your phone number."> -->
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                <%= text_area_tag(:message,nil,:type=>"Email",:class=>"form-control",:placeholder=>"Your Message *",:required=> true) %>
                                   <!-- <textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea> -->
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                
                                <button  class="btn btn-xl">Send Message</button>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </section>     